<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/layyj">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layyj">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="@drawable/layyj">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dip"
                android:layout_height="wrap_content">

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/maidtouxiang"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/maittoux"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/maidnicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发言人昵称"

                    android:textSize="15dip"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/maidshanchu"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@mipmap/maitlajix"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                >

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/comtextyj"
            >
            <LinearLayout
                android:layout_width="10dip"
                android:layout_height="wrap_content">

            </LinearLayout>
            <TextView
                android:id="@+id/maidneirong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发言内容1111111111111111111111111111111111111111111111111111111111111111"
                android:textColor="@color/black"
                android:textSize="15dip">

            </TextView>


            <LinearLayout
                android:layout_width="10dip"
                android:layout_height="wrap_content">

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="@drawable/layyj">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dip"
                android:layout_height="wrap_content">

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/maidbiaoqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/jinghao"
                    android:text="话题"
                    android:gravity="center"
                    android:textColor="#00BCD4"
                    android:textSize="15dip"></TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="@drawable/layyj">
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgrecycleview"
            ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/bigdianzanimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/dianzanno">

            </ImageView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/bigdianzantext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点赞数"
                android:textColor="@color/black">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bigpinglunimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/pinglun">
            </ImageView>
            <TextView
                android:id="@+id/bigpingluntext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评论数"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </LinearLayout>

</LinearLayout>